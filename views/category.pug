extends ./layout/app
  
block content
    section(class="py-5")
      if category
        h2(class="text-center text-4xl font-extrabold pt-10")= category.name 
      else
        h2(class="text-center text-4xl font-extrabold pt-10") No category found

      if properties
        if properties.length 
          div(class="grid grid-flow-col-1 lg:grid-cols-3 gap-5 mt-14")
            each property in properties
              include ./template/card
        else
          div(class="text-center text-2xl font-bold text-gray-500 mt-10") No properties found
      else
        div(class="text-center text-2xl font-bold text-gray-500 mt-10") No properties found

    