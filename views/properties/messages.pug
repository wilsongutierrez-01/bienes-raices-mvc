extends ../layout/admin

block content 
  h2(class="text-center text-2xl font-extrabold my-10")= page

  a(href="my-properties" 
      class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Back

  //- pre= JSON.stringify(messages, null, 2)
  div(class="mx-auto max-w-4xl bg-white shadow")
    if messages.length
      ul
        each message in messages
          li(class="border-gray-200 border-b p-5")
            p(class="font-bold text-gray-800") Name:  
              span(class="font-normal")= message.user.name
            
            p(class="font-bold text-gray-800") Message:  
              span(class="font-normal")= message.message
            
            p(class="font-bold text-gray-800") Sent:  
              span(class="font-normal")= formatDate(message.createdAt)
    else 
      p(class="text-center text-gray-600 p-5") You have no messages