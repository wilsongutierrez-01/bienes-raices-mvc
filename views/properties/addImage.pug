extends ../layout/admin

block styles 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name="csrf-token" content= csrfToken)

block content
 div(class="py-10")
    h3(class="text-4xl my-10 font-extrabold text-center") Real
      span(class="font-normal") Estate
    h2(class="text-center text-2xl font-extrabold")= page

    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

    div(class="bg-white shadow py-8 px-4 rounded mx-auto mx-max-4xl my-10 md:px-10")
      form(id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}`)
        input(type="hidden" name="_csrf" value= csrfToken)
      button(id="btnPublish" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white uppercase cursor-pointer font-bold mt-5" type="button") Publish property 

block scripts
  script(src="/js/addImage.js")